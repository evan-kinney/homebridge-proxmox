{
  "watch": [
    "src"
  ],
  "ext": "ts",
  "ignore": [
    "dist",
    "node_modules",
    ".homebridge/persist",
    ".homebridge/accessories"
  ],
  "exec": "npm run build && homebridge -D -U ./.homebridge -P ./",
  "signal": "SIGTERM",
  "env": {
    "NODE_OPTIONS": "--trace-warnings",
    "DEBUG": "homebridge-proxmox*"
  }
}