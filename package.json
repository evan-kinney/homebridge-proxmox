{
	"displayName": "Homebridge Proxmox",
	"name": "@evan-kinney/homebridge-proxmox",
	"version": "2.0.0",
	"description": "Simple switch for Proxmox QEMU/LXC nodes",
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/evan-kinney/homebridge-proxmox.git"
	},
	"bugs": {
		"url": "https://github.com/evan-kinney/homebridge-proxmox/issues"
	},
	"author": {
		"name": "KifKick"
	},
	"contributors": [
		"KifKick",
		"Evan Kinney <evandashkinney@icloud.com>"
	],
	"engines": {
		"node": ">= 18.17",
		"homebridge": ">=1.9.0"
	},
	"main": "dist/index.js",
	"scripts": {
		"lint": "npm-run-all -l -p lint:engines lint:typescript",
		"lint:engines": "ls-engines --current",
		"lint:engines:fix": "ls-engines --save",
		"lint:typescript": "eslint *.ts src/**.ts --max-warnings=0",
		"build": "rimraf ./dist && tsc",
		"watch": "npm run build && npm link && nodemon",
		"dev": "npm run build && npm run link:dev && npm run homebridge:dev",
		"link:dev": "npm link",
		"unlink:dev": "npm unlink -g @evan-kinney/homebridge-proxmox",
		"homebridge:dev": "homebridge -D -U ./.homebridge -P ./",
		"homebridge:debug": "DEBUG=* homebridge -D -U ./.homebridge -P ./",
		"test:config": "homebridge -D -U ./.homebridge -P ./ --no-qrcode",
		"clean": "rimraf ./dist && rimraf ./.homebridge/persist && rimraf ./.homebridge/accessories",
		"prepublishOnly": "npm run lint && npm run build"
	},
	"keywords": [
		"homebridge-plugin",
		"homebridge-proxmox",
		"proxmox"
	],
	"dependencies": {
		"proxmox-api": "^1.1.1"
	},
	"devDependencies": {
		"@eslint/js": "^9.29.0",
		"@types/node": "^24.0.4",
		"@typescript-eslint/eslint-plugin": "^8.35.0",
		"@typescript-eslint/parser": "^8.35.0",
		"eslint": "^9.29.0",
		"homebridge": "1.9.0",
		"jiti": "^2.4.2",
		"ls-engines": "^0.9.3",
		"nodemon": "^3.1.10",
		"npm-run-all2": "^8.0.4",
		"rimraf": "^6.0.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.3"
	}
}
